<mainLayout>:
    GridLayout:
        size_hint: 0.85, 0.2
        pos_hint: {"x": 0.1, "y": 0.8}
        cols: 3
        Label:
            id: top1
            text: "Fill1"

        Label:
            id: top2
            text: "FIll3"
        Label:
            id: top3
            text: "Fill3"

    FloatLayout:
        size_hint_y: 0.25
        Button:
            on_release: root.reset()
            size_hint: 0.4, 0.2
            pos_hint: {"x": 0.3, "y": 1}
            text: "Reset"

    GridLayout:
        size_hint: 0.9, 0.7
        pos_hint: {"x": 0.05, "y": 0.235}
        cols: 3

        Image:
            size_hint: 1, 0.5
            id: dis_1
            source: "assets/Rock.png"
        Image:
            size_hint: 1, 0.5
            id: dis_2
            source: "assets/Paper.png"
        Image:
            size_hint: 1, 0.5
            id: dis_3
            source: "assets/Scissor.png"
    GridLayout:
        size_hint_y: 0.3
        cols: 3
        padding: [50,70,50,20]
        Button:
            on_release: root.nextround("R")
            text: "Rock"

        Button:
            on_release: root.nextround("P")
            text: "Paper"

        Button:
            on_release: root.nextround("S")
            text: "Scissors"
